@model SistemaGCS.Models.Cronograma
@{
    ViewBag.Title = "Agregar";
}


<nav class="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Cronograma/Index">Cronograma</a></li>
        <li class="breadcrumb-item active">@(Model.Id_cronograma > 0 ? Model.Nombre : "Nuevo Registro")</li>
    </ol>
</nav>

@using (Html.BeginForm("Guardar", "Cronograma", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.Id_cronograma)
    <div class="card">
        <div class="card-header">Informacion del Cronograma</div>
        <div class="card-body">

            <div class="form-group">
                @Html.LabelFor(x => x.Nombre)
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Descripcion)
                @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "label label-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.FechaInicio)
                @Html.TextBoxFor(x => x.FechaInicio, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.FechaInicio, null, new { @class = "label label-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Fechafin)
                @Html.TextBoxFor(x => x.Fechafin, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fechafin, null, new { @class = "label label-danger" })
            </div>

        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-outline-primary">Guardar</button>
            <a href="~/Proyecto" class="btn btn-outline-danger">Cancelar</a>
        </div>
        <br /><br /><br />


    </div>
}
